<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="de.ttcbeuren.ttcbeurenhauptapp.NeuesSpielActivity" >

        <CheckBox
            android:id="@+id/check_beurenistheim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_beurenistheimmannschaft" >
        </CheckBox>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_Spielsystem" />

        <Spinner
            android:id="@+id/spn_spielsystem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textV_Live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_Mannschaftsart" />

        <Spinner
            android:id="@+id/spn_mannschaftart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_beuren" />

        <Spinner
            android:id="@+id/spn_beurenmannschaft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_Gegner" />

        <Spinner
            android:id="@+id/spn_gegnermannschaft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_gegnerNummer" />

        <Spinner
            android:id="@+id/spn_gegnermannschaftsnummer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_Beginn" />

        <TimePicker
            android:id="@+id/time_Spielbeginn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_spieldatum" />

        <DatePicker
            android:id="@+id/spieldatum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_spielstand" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <NumberPicker
                android:id="@+id/np_heim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <NumberPicker
                android:id="@+id/np_gast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/np_heim"
                android:layout_toRightOf="@+id/np_heim"
                android:text="@string/text_beurenneuesSpiel" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView8"
                android:layout_alignBottom="@+id/textView8"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/np_gast"
                android:layout_toStartOf="@+id/np_gast"
                android:text="@string/text_gegner" />
        </RelativeLayout>

        <CheckBox
            android:id="@+id/check_Spielistentschieden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_SpielIstEntschieden" />

        <TextView
            android:id="@+id/textView_Spielentschieden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_Spielende" />

        <TimePicker
            android:id="@+id/time_Spielende"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etxt_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/text_Status" >
        </EditText>

        <Button
            android:id="@+id/btn_erstellen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_erstellen" />
    </LinearLayout>

</ScrollView>